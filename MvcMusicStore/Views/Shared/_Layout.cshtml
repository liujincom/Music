<!DOCTYPE html>
<html>
<head>

    <title>@ViewBag.Title </title>
    <link  href="@Url.Content("/Content/Site.css")"  rel=" stylesheet" type="text/css"/>
    <link href="@Url.Content("/Content/bootstrap.min.css")" rel=" stylesheet" type="text/css" />

    <script src="@Url.Content("/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
</head>
<body>
    <div id="header">
        <div>
            <h1>
                ASP.NET MVC-音乐商店
            </h1>&nbsp;&nbsp;&nbsp;
            @if (Request.IsAuthenticated)
            {
                using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                {
                    @Html.AntiForgeryToken()

                    <h4 class="nav navbar-nav navbar-right">
                        
                            @Html.ActionLink("你好 " + User.Identity.Name + " !", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "管理" })
                        <a href="javascript:document.getElementById('logoutForm').submit()">&nbsp;&nbsp;&nbsp;&nbsp;注销</a>
                    </h4>
                }
            }
            else
            {
                <h4 class="nav navbar-nav navbar-right">
                    @Html.ActionLink("注册", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
                    @Html.ActionLink("登录", "LogOn", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </h4>
            }
        </div>
        <ul id="navlist">
            <li><a href="/StoreManger">唱片目录</a></li>
            <li class="first"><a href="/"id=" current">网站主页 </a></li>
            <li><a href="/Store/">音乐种类</a></li>
            <li><a href="/ShoppingCart/">购物车</a></li>
        </ul>
    </div>
    @RenderBody()
    <hr />
    <footer>
        <p>
            &copy;@DateTime.Now.Year - 来自2017软件技术2班
        </p>
    </footer>
    <script src="~/Scripts/bootstrap.min.js"> </script>
</body>
</html>
